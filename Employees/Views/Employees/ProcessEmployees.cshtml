@model PairOfEmployeesViewModel

<form asp-controller="Employees" asp-action="ProcessEmployees" method="post" enctype="multipart/form-data">
    <input type="file" name="file" accept/>
    <hr />
    <button type="submit">Upload</button>
</form>

@*@if(Model.Count() > 0)*@
<hr />
@if(@Model.EmployeeId1 != 0){
<table cellpadding="5" cellspacing="5" border="1">
    <tr>
        <td>Employee ID #1</td>
        <td>Employee ID #2</td>
        <td>Days worked</td>
    </tr>
    <tr>
        <td>@Model.EmployeeId1</td>
        <td>@Model.EmployeeId2</td>
        <td>@Model.Days</td>
    </tr>
</table>
}


@if (@Model.EmployeeId1 != 0)
{
    <hr />
    <table cellpadding="5" cellspacing="5" border="1">
        <tr>
            <td>Employee ID #1</td>
            <td>Employee ID #2</td>
            <td>Project ID</td>
            <td>Days worked</td>
        </tr>
        @foreach(PairOfEmployees employee in Model.PairsOfEmployees)
        {
            <tr>
                <td>@employee.EmployeeId1</td>
                <td>@employee.EmployeeId2</td>
                @foreach(var pId in employee.Projects)
                {
                    <td>@pId</td>   
                }
                <td>@employee.Days</td>
            </tr>
        }
    </table>
}
